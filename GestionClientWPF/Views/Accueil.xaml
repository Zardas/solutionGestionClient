<Window x:Class="GestionClientWPF.Views.Accueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionClientWPF.Views"
        mc:Ignorable="d"
        Title="Accueil" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="{Binding LoginUtilisateur, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" FontFamily="Linux Biolinum G" TextAlignment="Left" Foreground="#FFEA601F" FontWeight="Bold" Height="61" Width="481" Margin="31,39,0,0" />
        <DataGrid Background="#FF937E7E"  ItemsSource="{Binding Clients, NotifyOnSourceUpdated=True}" BorderBrush="#FF1267B9" Margin="0,133,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="*" Binding="{Binding Login}" />
                <DataGridTextColumn Header="ID" Width="*" Binding="{Binding Nom}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
